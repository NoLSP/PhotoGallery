<h2>Gallery Page</h2>

<div class="album py-5 bg-light">
    <div class="container">
        
        {{#if images.length}}
    
        <div class="mx-auto" id="mainDiv">

            {{#each images}}

                    <div class="row">
                        <div class="col s12 m7">
                            <div class="card">
                                <div class="card-content">
                                    <span class="card-title">{{ title }}</span>
                                </div>
                                <div class="card-image">
                                    <img src= {{ image }} ">
                                </div>
                                <div class="card-content">
                                    <p>Description: {{ description }}</p>
                                    <p>Author: {{author}}</p>
                                </div>
                            </div>
                        </div>
                    </div>

            {{/each}}

        </div>

{{else}}
    <p>No images</p>
{{/if}}